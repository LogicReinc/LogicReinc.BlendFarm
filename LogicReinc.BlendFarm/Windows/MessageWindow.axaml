<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="200"
        x:Class="LogicReinc.BlendFarm.Windows.MessageWindow"
        Title="BlendFarm by LogicReinc"
        Background="#222222">
    
  <Window.Styles>
    <StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseDark.xaml" />
  </Window.Styles>
    
    <StackPanel>
      <StackPanel Width="500">
        <TextBlock Margin="20" FontSize="20" FontWeight="Bold" TextAlignment="Center" Text="{Binding MsgTitle}" TextWrapping="Wrap">

        </TextBlock>
        <TextBlock Margin="10,0,10,10" FontSize="15" TextWrapping="Wrap" TextAlignment="Center" Text="{Binding Description}">

        </TextBlock>
      </StackPanel>
      <Button Height="40" Command="{Binding TriggerOk}">Ok</Button>
    </StackPanel>
</Window>
