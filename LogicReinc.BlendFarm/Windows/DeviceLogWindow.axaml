<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="300"
        x:Class="LogicReinc.BlendFarm.Windows.DeviceLogWindow"
        Title="DeviceLogWindow">
  <Window.Styles>
    <StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseDark.xaml" />
  </Window.Styles>
  <DockPanel HorizontalAlignment="Stretch" LastChildFill="true" Background="Black">
	  <ScrollViewer VerticalScrollBarVisibility="Auto" AllowAutoHide="True" Name="scroller">
		  <TextBlock HorizontalAlignment="Stretch" TextWrapping="Wrap" Name="log"  />
	  </ScrollViewer>
  </DockPanel>
</Window>
